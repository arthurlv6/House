@inject IJSRuntime JSRuntime
<header id="header" class="header">
    <div class="container">
        <h1 class="logo">
            <a class="scrollto" href="#hero">
                <span class="logo-icon-wrapper"><img class="logo-icon" src="images/geenhavenicon.png" alt="icon"></span>
            </a>
        </h1><!--//logo-->
        <nav class="main-nav navbar-expand-lg float-right navbar-inverse" role="navigation">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button><!--//nav-toggle-->

            <div id="navbar-collapse" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item text-uppercase">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            Home
                        </NavLink>
                    </li>
                    <li class="nav-item text-uppercase">
                        <NavLink class="nav-link" href="plan">
                            Our plans
                        </NavLink>
                    </li>
                    <li class="nav-item text-uppercase">
                        <NavLink class="nav-link" href="gallery">
                            gallery
                        </NavLink>
                    </li>
                    <li class="nav-item text-uppercase">
                        <NavLink class="nav-link" href="news">
                            news
                        </NavLink>
                    </li>
                    <li class="nav-item text-uppercase">
                        <NavLink class="nav-link" href="contactus">
                            contact us
                        </NavLink>
                    </li>
                </ul><!--//nav-->
            </div><!--//navabr-collapse-->
        </nav><!--//main-nav-->
    </div><!--//container-->
</header><!--//header-->

<div id="hero-carousel" class="hero-carousel carousel carousel-fade slide" data-ride="carousel" data-interval="5000">

    <div class="figure-holder-wrapper">
        <div class="container">
            <div class="row justify-content-end">
                <div class="figure-holder">

                </div><!--//figure-holder-->
            </div><!--//row-->
        </div><!--//container-->
    </div><!--//figure-holder-wrapper-->
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li class="active" data-slide-to="0" data-target="#hero-carousel"></li>
        <li data-slide-to="1" data-target="#hero-carousel"></li>
        <li data-slide-to="2" data-target="#hero-carousel"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="carousel-item item-1 active d-flex justify-content-around">
            <div class="container item-content">
                <div class="row item-content-inner h-100">
                    <div class="d-flex h-100">
                        <div class="m-0  container align-self-sm-center align-self-start animate__animated animate__fadeInRightBig animate__delay-1s">
                            <div class="item-content-inner">
                                <img src="images/geenhavenicon.png" />
                                <h3 style="color:white">Premium quality, energy efficient homes</h3>
                                <p>It helps you to build a beautiful and effective landing page to promote your product or side project!</p>
                                <NavLink class="btn btn-primary btn-cta" href="contactus">
                                    Contact US
                                </NavLink>
                            </div><!--//item-content-inner-->
                        </div><!--//item-content-->
                        <img style="max-height:450px;" class="pl-5 d-sm-none d-md-block align-self-end img-fluid animate__animated animate__fadeInRightBig animate__delay-2s" src="images/worker.png" alt="image" />
                    </div>
                </div>
            </div>

        </div><!--//item-->

        <div class="carousel-item item-2">
            <section>
                <div class="overlay"></div>
                <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                    <source src="videos/banner-2video.mp4" type="video/mp4">
                </video>
                <div class="container h-100">
                    <div class="d-flex h-100 text-center align-items-center">
                        <div class="w-100 text-white align-self-end pb-5">
                            <h2 style="color:white">
                                Architecturally designed homes to
                                maximise space and comfort
                            </h2>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary btn-cta" data-toggle="modal" data-target="#myModal">See our houres</button>
                                <button class="btn btn-primary btn-cta ml-3" data-toggle="modal" data-target="#myModal">See our plans</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div><!--//item-->

        <div class="carousel-item item-3 d-flex justify-content-around">
            <div class=" item-content container align-self-center animate__animated animate__backInDown animate__delay-1s">
                <div class="item-content-inner">
                    <h2 style="color:white">Built by New Zealanders for New Zealanders</h2>
                    <p class="intro">It helps you to build a beautiful and effective landing page to promote your product or side project!</p>
                    <NavLink class="btn btn-primary btn-cta" href="gallery">
                        Home Gallery
                    </NavLink>
                </div><!--//item-content-inner-->
            </div><!--//item-content-->
        </div><!--//item-->
    </div><!--//carousel-inner-->

</div><!--//carousel-->
<!-- Modal -->
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title" id="myLabel">It is coming soon...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex h-100 justify-content-center align-items-center" >
                    <div class="d-flex flex-column">
                        <h3 class="text-info align-self-center">Working on it</h3>
                        <img src="images/building.png" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

</div>

    @code{ int currentCount = 0;
        bool firstRender = true;
        protected override async Task OnAfterRenderAsync(bool firstRender)
        {
            if (firstRender)
            {
                await JSRuntime.InvokeVoidAsync("blazorInterop.initializeCarousel");
            }
        } }
